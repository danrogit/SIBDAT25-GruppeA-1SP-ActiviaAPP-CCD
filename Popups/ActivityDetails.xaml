<Window x:Class="ActiviaAPP.Popups.ActivityDetails"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"   
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Activity Details" Height="720" Width="900"
        ResizeMode="CanResize" WindowStartupLocation="CenterOwner">

    <Window.Resources>
        <Style x:Key="OrangeButton" TargetType="Button">
            <Setter Property="Background" Value="#FFF95F20"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#FFF95F20"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontFamily" Value="Poppins"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6"
                                Padding="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FFE05314"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock x:Name="TitleText"
                   FontSize="28"
                   FontWeight="Bold"
                   FontFamily="Poppins"
                   Foreground="#FFF95F20"
                   TextWrapping="Wrap"
                   Margin="0,0,0,15"/>

        <!-- Main content two columns: left = image, right = details -->
        <Grid Grid.Row="1" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="3*" />
            </Grid.ColumnDefinitions>

            <!-- LEFT: cover image -->
            <Border Grid.Column="0"
                    Background="#FFF2F5F9"
                    CornerRadius="6"
                    BorderBrush="#FFC9D1DC"
                    BorderThickness="1"
                    Margin="0,0,12,0"
                    Padding="6">
                <Image x:Name="CoverImage" Stretch="Uniform" ClipToBounds="True"/>
            </Border>

            <!-- RIGHT: details -->
            <StackPanel Grid.Column="1">
                <TextBlock Text="Beskrivelse" FontWeight="Bold" FontFamily="Poppins"/>
                <TextBlock x:Name="DescriptionText" FontFamily="Yu Gothic UI Semibold" TextWrapping="Wrap" Margin="0,4,0,15"/>

                <StackPanel Orientation="Horizontal" Margin="0,4,0,15">
                    <TextBlock Text="Dato: " FontWeight="Bold" FontFamily="Poppins"/>
                    <TextBlock x:Name="DateText" FontFamily="Yu Gothic UI Semibold" Margin="0,0,20,0"/>
                    <TextBlock Text="Pladser: " FontWeight="Bold" FontFamily="Poppins"/>
                    <TextBlock x:Name="ParticipantsText" FontFamily="Yu Gothic UI Semibold"/>
                </StackPanel>

                <TextBlock Text="Tilmeldte" FontWeight="Bold" FontFamily="Poppins"/>
                <TextBlock x:Name="RegisteredList" TextWrapping="Wrap" Margin="0,4,0,0" FontFamily="Yu Gothic UI Semibold"/>
            </StackPanel>
        </Grid>

        <!-- FOOTER -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button x:Name="RegisterBtn" Content="Tilmeld" Width="140" Margin="0,0,10,0" Style="{StaticResource OrangeButton}" Click="RegisterBtn_Click"/>
            <Button Content="Luk" Width="140" Style="{StaticResource OrangeButton}" Click="CloseBtn_Click"/>
        </StackPanel>
    </Grid>
</Window>
