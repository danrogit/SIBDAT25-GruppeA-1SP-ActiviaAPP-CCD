<Page x:Class="ActiviaAPP.SignUp"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="SignUp">

    <Page.Resources>

        <!-- 🔥 Orange Activia Button Style -->
        <Style x:Key="OrangeButton" TargetType="Button">
            <Setter Property="Background" Value="#FFF95F20"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#FFF95F20"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontFamily" Value="Poppins"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6"
                                Padding="6">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <!-- Hover -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FFE05314"/>
                            </Trigger>
                            <!-- Disabled -->
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Page.Resources>


    <Grid Background="#FFF7F9FC">

        <!-- Centeret signup-boks -->
        <Border Width="400"
                Padding="30"
                Background="White"
                CornerRadius="10"
                BorderBrush="#FFC9D1DC"
                BorderThickness="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">

            <StackPanel>

                <!-- Titel -->
                <TextBlock Text="Opret bruger"
                           FontSize="26"
                           FontFamily="Poppins"
                           FontWeight="Bold"
                           Foreground="#FFF95F20"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,25"/>

                <!-- Fulde navn -->
                <TextBlock Text="Fulde navn"
                           FontFamily="Poppins"
                           FontWeight="Bold"/>
                <TextBox x:Name="FullNameBox"
                         Margin="0,5,0,15"
                         Height="30"
                         FontFamily="Yu Gothic UI Semibold"
                         Background="#FFF2F5F9"
                         BorderBrush="#FFC9D1DC"/>

                <!-- Brugernavn -->
                <TextBlock Text="Brugernavn"
                           FontFamily="Poppins"
                           FontWeight="Bold"/>
                <TextBox x:Name="UsernameBox"
                         Margin="0,5,0,15"
                         Height="30"
                         FontFamily="Yu Gothic UI Semibold"
                         Background="#FFF2F5F9"
                         BorderBrush="#FFC9D1DC"/>

                <!-- Email -->
                <TextBlock Text="Email"
                           FontFamily="Poppins"
                           FontWeight="Bold"/>
                <TextBox x:Name="EmailBox"
                         Margin="0,5,0,15"
                         Height="30"
                         FontFamily="Yu Gothic UI Semibold"
                         Background="#FFF2F5F9"
                         BorderBrush="#FFC9D1DC"/>

                <!-- Telefon -->
                <TextBlock Text="Telefon"
                           FontFamily="Poppins"
                           FontWeight="Bold"/>
                <TextBox x:Name="PhoneBox"
                         Margin="0,5,0,15"
                         Height="30"
                         FontFamily="Yu Gothic UI Semibold"
                         Background="#FFF2F5F9"
                         BorderBrush="#FFC9D1DC"/>

                <!-- Adgangskode -->
                <TextBlock Text="Adgangskode"
                           FontFamily="Poppins"
                           FontWeight="Bold"/>
                <PasswordBox x:Name="PasswordBox"
                             Margin="0,5,0,15"
                             Height="30"
                             FontFamily="Yu Gothic UI Semibold"
                             Background="#FFF2F5F9"
                             BorderBrush="#FFC9D1DC"/>

                <!-- Bekræft adgangskode -->
                <TextBlock Text="Bekræft adgangskode"
                           FontFamily="Poppins"
                           FontWeight="Bold"/>
                <PasswordBox x:Name="ConfirmPasswordBox"
                             Margin="0,5,0,25"
                             Height="30"
                             FontFamily="Yu Gothic UI Semibold"
                             Background="#FFF2F5F9"
                             BorderBrush="#FFC9D1DC"/>

                <!-- Knapper -->
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center">

                    <Button Content="Opret"
                            Style="{StaticResource OrangeButton}"
                            Width="120"
                            Margin="0,0,10,0"
                            Click="CreateUser"/>

                    <Button Content="Annuller"
                            Style="{StaticResource OrangeButton}"
                            Width="120"
                            Click="Cancel"/>
                </StackPanel>

            </StackPanel>

        </Border>

    </Grid>
</Page>
